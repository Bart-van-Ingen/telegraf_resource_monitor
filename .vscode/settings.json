{
    // EDITOR SETTINGS
    "editor.tabSize": 4,
    "editor.rulers": [
        99
    ],
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    // PYTHON SETTINGS
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    // "autopep8.path": [
    //     "/usr/local/bin/autopep8"
    // ],
    "python.analysis.completeFunctionParens": true,
    // Autocomplete from ros python packages
    "python.analysis.extraPaths": [
        "/opt/ros/foxy/lib/python3.8/site-packages/"
    ],
    "python.autoComplete.extraPaths": [
        "/opt/ros/foxy/lib/python3.8/site-packages/"
    ],
    // Environment file lets vscode find python files within workspace
    "python.envFile": "${workspaceFolder}/.env",
    "autoDocstring.docstringFormat": "numpy",
    // python unit testing
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "--color=yes",
        "--verbose"
    ],
    "autopep8.args": [
        "--aggressive",
        "--global-config",
        "setup.cfg"
    ],
    "isort.args": [
        "--settings-file",
        "setup.cfg"
    ],
    // CPP SETTINGS
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "[cpp]": {
        "editor.defaultFormatter": "ms-iot.vscode-ros"
    },
    "search.exclude": {
        "**/*.code-search": true,
        "**/bower_components": true,
        "**/build/**": true,
        "**/install": true,
        "**/log": true,
        "**/node_modules": true
    },
    "ros.distro": "foxy",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "python.analysis.autoFormatStrings": true,
    "python.analysis.inlayHints.pytestParameters": true,
    // MARKDOWN SETTINGS
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "prettier.configPath": ".config/.prettierrc",
    "prettier.ignorePath": ".config/.prettierignore",
    "prettier.printWidth": 100
}
