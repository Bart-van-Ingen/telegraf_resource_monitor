  "version": "0.2.0",
  "configurations": [
    {
      "name": "ROS: Attach",
      "type": "ros2",
      "request": "attach"
    },
    {
      "name": "ROS: Launch",
      "type": "ros2",
      "request": "launch",
      "target": "${file}",
      "arguments": [
        "config_file_path:=${input:config_file_path}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "config_file_path",
      "type": "promptString",
      "description": "Enter the path to the config file",
      "default": ""
    }
  ]
}
